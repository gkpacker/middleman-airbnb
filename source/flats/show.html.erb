<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->

  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%=flat.city_slug %>'); height: 40vh; background-position: center;">
  </div>

<div id="show">
  <div class="wrapper" id="show">
    <div class="flat-card">
      <div class="flat-info">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}",
         class: "img-circle" %>
        <p><%= flat.name %></p>
        <h1><%= flat.description %></h1>
        <p><%= flat.city_name %></p>
        <% if flat.wifi == true %>
          <p style="color: green;"><em><i class="fa fa-wifi"></i> Wi-fi</em></p>
        <%else%>
          <p style="color: red;"><em><i class="fa fa-wifi"></i> Wi-fi</em></p>
        <%end%>
        <% if flat.breakfest == true %>
          <p style="color: green;"><em><i class="fa fa-coffee"></i> Breakfest</em></p>
        <%else%>
          <p style="color: red;"><em><i class="fa fa-coffee"></i> Breakfest</p>
        <%end%>

        <ul class="list-inline">
          <% flat.rating.times do %>
            <li><i class="fa fa-star"></i></li>
          <%end%>
        </ul>
      </div>
    </div>

      <form action="" id="flat-form" class=" text-center">
        <h2>Book this flat</h2>

        <div class="form-input form-inline">
          <input type="text" placeholder="checkin" class="form-control">
          <input type="text" placeholder="checkout" class="form-control">
        </div>

        <select name="" id="" class="btn-lg">
          <option value="1">1 guest</option>
          <option value="2">2 guests</option>
          <option value="3">3 guests</option>
        </select>
        <br>
        <input type="submit" class="btn btn-info btn-lg" value="Book it">
      </form>
    </div>
  </div>
</div>
